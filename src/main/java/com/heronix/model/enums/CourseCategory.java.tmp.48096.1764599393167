package com.eduscheduler.model.enums;

/**
 * CourseCategory - Distinguishes between required core courses and optional electives
 *
 * This is separate from CourseType (which indicates difficulty level like AP/Honors).
 * CourseCategory determines if a course is REQUIRED for all students or OPTIONAL.
 *
 * Examples:
 * - English I: Category=CORE, Type=REGULAR (required for all 9th graders)
 * - AP English: Category=CORE, Type=AP (required for advanced 12th graders)
 * - HVAC: Category=ELECTIVE, Type=REGULAR (optional vocational course)
 * - Honors Art: Category=ELECTIVE, Type=HONORS (optional advanced art)
 *
 * @author EduScheduler Pro Team
 * @version 1.0
 * @since 2025-11-30
 */
public enum CourseCategory {
    /**
     * CORE - Required course for all students at the specified grade level
     *
     * Examples: English I, Algebra 1, Biology, World History, PE
     *
     * Characteristics:
     * - ALL students at grade level must be enrolled
     * - Auto-enrolled during registration
     * - Cannot be dropped without counselor approval
     * - Counts toward graduation requirements
     */
    CORE("Core", "Required for all students at grade level"),

    /**
     * ELECTIVE - Optional course, student-selected
     *
     * Examples: Art, Music, HVAC, Welding, Spanish, Computer Science
     *
     * Characteristics:
     * - Students select based on interests and career goals
     * - Limited enrollment capacity
     * - First-come-first-served or lottery system
     * - Counselors may assign to fill schedules
     * - Can be dropped/swapped with approval
     */
    ELECTIVE("Elective", "Optional, student-selected course");

    private final String displayName;
    private final String description;

    CourseCategory(String displayName, String description) {
        this.displayName = displayName;
        this.description = description;
    }

    public String getDisplayName() {
        return displayName;
    }

    public String getDescription() {
        return description;
    }

    /**
     * Check if this category is required (core)
     *
     * @return true if CORE (required for all students at grade level)
     */
    public boolean isRequired() {
        return this == CORE;
    }

    /**
     * Check if this category is optional (elective)
     *
     * @return true if ELECTIVE (student-selected, optional)
     */
    public boolean isElective() {
        return this == ELECTIVE;
    }

    @Override
    public String toString() {
        return displayName;
    }
}

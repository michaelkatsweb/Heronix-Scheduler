<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
Special Event Block Management Dialog
Location: src/main/resources/fxml/SpecialEventBlockDialog.fxml
-->

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eduscheduler.ui.controller.SpecialEventBlockController"
            styleClass="dialog-container">
    
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Special Event Blocks (IEP, 504, Planning)" styleClass="dialog-title"/>
            <Separator/>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.6" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <!-- Left: Table View -->
            <VBox spacing="10">
                <Label text="Existing Event Blocks:" styleClass="section-label"/>
                <TableView fx:id="eventBlocksTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="150"/>
                        <TableColumn fx:id="dayColumn" text="Day" prefWidth="100"/>
                        <TableColumn fx:id="startTimeColumn" text="Start" prefWidth="80"/>
                        <TableColumn fx:id="endTimeColumn" text="End" prefWidth="80"/>
                        <TableColumn fx:id="blocksTeachingColumn" text="Blocks Classes" prefWidth="100"/>
                        <TableColumn fx:id="activeColumn" text="Active" prefWidth="60"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Right: Form -->
            <VBox spacing="15">
                <Label text="Event Block Details:" styleClass="section-label"/>
                
                <GridPane hgap="10" vgap="10">
                    <Label text="Event Type:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="eventTypeCombo" promptText="Select type" 
                              GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="180"/>
                    
                    <Label text="Day of Week:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="dayOfWeekCombo" promptText="Select day" 
                              GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="180"/>
                    
                    <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="startTimeField" promptText="HH:MM" 
                               GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="endTimeField" promptText="HH:MM" 
                               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <TextArea fx:id="descriptionArea" promptText="Optional description" 
                              GridPane.columnIndex="1" GridPane.rowIndex="4" 
                              prefRowCount="3" wrapText="true"/>
                    
                    <CheckBox fx:id="blocksTeachingCheckBox" text="Blocks Teaching" 
                              selected="true" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    
                    <CheckBox fx:id="activeCheckBox" text="Active" selected="true"
                              GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </GridPane>
                
                <Separator/>
                
                <VBox spacing="8">
                    <Button fx:id="addButton" text="Add New" 
                            onAction="#handleAdd" maxWidth="Infinity" 
                            styleClass="primary-button"/>
                    <Button fx:id="updateButton" text="Update Selected" 
                            onAction="#handleUpdate" maxWidth="Infinity" 
                            styleClass="secondary-button"/>
                    <Button fx:id="deleteButton" text="Delete Selected" 
                            onAction="#handleDelete" maxWidth="Infinity" 
                            styleClass="danger-button"/>
                </VBox>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="Close" onAction="#handleClose" styleClass="secondary-button"/>
        </HBox>
    </bottom>
    
</BorderPane>
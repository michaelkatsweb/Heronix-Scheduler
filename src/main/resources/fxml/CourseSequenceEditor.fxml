<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eduscheduler.controller.CourseSequenceEditorController"
            styleClass="root">

    <top>
        <VBox spacing="10" styleClass="card">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <!-- Title and Actions -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ðŸ“‹ Course Sequence Editor" styleClass="header-large"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="New Sequence" onAction="#handleNewSequence" styleClass="button-primary"/>
                <Button text="Import Sequence" onAction="#handleImportSequence" styleClass="button"/>
                <Button text="Refresh" onAction="#handleRefresh" styleClass="button"/>
            </HBox>

            <!-- Sequence Selection -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Sequence:"/>
                <ComboBox fx:id="sequenceSelector" promptText="Select sequence..." prefWidth="300" onAction="#handleSequenceChange"/>
                <Region prefWidth="20"/>
                <Label text="Type:"/>
                <Label fx:id="sequenceTypeLabel" text="-" styleClass="value-text"/>
                <Region prefWidth="20"/>
                <Label text="Subject:"/>
                <Label fx:id="subjectAreaLabel" text="-" styleClass="value-text"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Edit Details" onAction="#handleEditSequence" styleClass="button"/>
                <Button text="Delete" onAction="#handleDeleteSequence" styleClass="button-danger"/>
            </HBox>

            <!-- Sequence Info Bar -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="info-bar">
                <VBox spacing="2">
                    <Label text="Total Steps:" styleClass="label-small"/>
                    <Label fx:id="totalStepsLabel" text="0" styleClass="value-text" style="-fx-font-size: 18;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="2">
                    <Label text="Total Credits:" styleClass="label-small"/>
                    <Label fx:id="totalCreditsLabel" text="0.0" styleClass="value-text" style="-fx-font-size: 18;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="2">
                    <Label text="Min GPA Required:" styleClass="label-small"/>
                    <Label fx:id="minGPALabel" text="N/A" styleClass="value-text" style="-fx-font-size: 18;"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="2">
                    <Label text="Students Enrolled:" styleClass="label-small"/>
                    <Label fx:id="enrolledStudentsLabel" text="0" styleClass="value-text" style="-fx-font-size: 18;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Visualize Pathway" onAction="#handleVisualize" styleClass="button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS">
            <!-- Left: Course Steps List -->
            <VBox spacing="5">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Course Sequence Steps" styleClass="section-header"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Add Course" onAction="#handleAddCourse" styleClass="button-success"/>
                    <Button text="Move Up" onAction="#handleMoveUp" styleClass="button"/>
                    <Button text="Move Down" onAction="#handleMoveDown" styleClass="button"/>
                    <Button text="Remove" onAction="#handleRemoveCourse" styleClass="button-danger"/>
                </HBox>

                <TableView fx:id="stepsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="orderColumn" text="Step" prefWidth="50"/>
                        <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="100"/>
                        <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="250"/>
                        <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="60"/>
                        <TableColumn fx:id="semesterColumn" text="Semester" prefWidth="80"/>
                        <TableColumn fx:id="creditsColumn" text="Credits" prefWidth="70"/>
                        <TableColumn fx:id="requiredColumn" text="Required" prefWidth="80"/>
                    </columns>
                </TableView>

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Save Sequence" onAction="#handleSaveSequence" styleClass="button-primary"/>
                    <Button text="Export to CSV" onAction="#handleExportCSV" styleClass="button"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="statusLabel" text="Ready"/>
                </HBox>
            </VBox>

            <!-- Right: Details Panel -->
            <VBox spacing="10" styleClass="card">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Sequence Details" styleClass="section-header"/>

                <Separator/>

                <!-- Basic Info -->
                <VBox spacing="5">
                    <Label text="Basic Information" styleClass="label-small" style="-fx-font-weight: bold;"/>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="35"/>
                            <ColumnConstraints percentWidth="65"/>
                        </columnConstraints>

                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-small"/>
                        <Label fx:id="detailNameLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Code:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-small"/>
                        <Label fx:id="detailCodeLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-small"/>
                        <Label fx:id="detailTypeLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="label-small"/>
                        <Label fx:id="detailSubjectLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <Separator/>

                <!-- Requirements -->
                <VBox spacing="5">
                    <Label text="Requirements" styleClass="label-small" style="-fx-font-weight: bold;"/>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="35"/>
                            <ColumnConstraints percentWidth="65"/>
                        </columnConstraints>

                        <Label text="Min GPA:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="label-small"/>
                        <Label fx:id="detailMinGPALabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Recommended GPA:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="label-small"/>
                        <Label fx:id="detailRecGPALabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Prerequisites:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="label-small"/>
                        <Label fx:id="detailPrereqLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                </VBox>

                <Separator/>

                <!-- Description -->
                <VBox spacing="5" VBox.vgrow="ALWAYS">
                    <Label text="Description" styleClass="label-small" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="descriptionArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS"
                              promptText="No description available"/>
                </VBox>

                <Separator/>

                <!-- Statistics -->
                <VBox spacing="5">
                    <Label text="Statistics" styleClass="label-small" style="-fx-font-weight: bold;"/>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Total Steps" styleClass="label-small"/>
                            <Label fx:id="detailStepsLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Total Credits" styleClass="label-small"/>
                            <Label fx:id="detailCreditsLabel" text="0.0" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox spacing="3" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Avg Completion Rate" styleClass="label-small"/>
                            <Label fx:id="detailCompletionLabel" text="0%" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                        </VBox>

                        <VBox spacing="3" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Students Enrolled" styleClass="label-small"/>
                            <Label fx:id="detailEnrolledLabel" text="0" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                        </VBox>
                    </GridPane>
                </VBox>

                <Separator/>

                <!-- Quick Actions -->
                <VBox spacing="8">
                    <Button text="Generate Academic Plans" onAction="#handleGeneratePlans" styleClass="button-primary" prefWidth="Infinity"/>
                    <Button text="View Students in Sequence" onAction="#handleViewStudents" styleClass="button" prefWidth="Infinity"/>
                    <Button text="Preview Pathway Flowchart" onAction="#handlePreviewFlowchart" styleClass="button" prefWidth="Infinity"/>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Course Sequence Editor" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="lastSavedLabel" text="Not saved" styleClass="label-small"/>
        </HBox>
    </bottom>

</BorderPane>

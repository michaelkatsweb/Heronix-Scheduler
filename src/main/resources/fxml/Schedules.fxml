<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
Schedules Management View - Dark Futuristic Theme
Location: src/main/resources/fxml/Schedules.fxml
Controller: com.eduscheduler.ui.controller.SchedulesController
-->

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eduscheduler.ui.controller.SchedulesController"
            styleClass="root">

    <top>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="15" styleClass="card">
                <Label text="ðŸ“… Schedule Management" styleClass="label-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="âž• New Schedule" onAction="#handleNewSchedule" styleClass="button-success"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="button-primary"/>
            </HBox>

            <!-- Filter Bar -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="card">
                <Label text="Filter:" styleClass="label"/>
                <ComboBox fx:id="statusFilterCombo" promptText="Status" prefWidth="150"/>
                <ComboBox fx:id="typeFilterCombo" promptText="Schedule Type" prefWidth="150"/>
                <ComboBox fx:id="periodFilterCombo" promptText="Period" prefWidth="150"/>
                <Button text="Clear Filters" onAction="#handleClearFilters" styleClass="button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <!-- Schedules Table Container -->
        <VBox spacing="10" styleClass="card">
            <padding>
                <Insets top="15" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="All Schedules" styleClass="label-title"/>

            <TableView fx:id="schedulesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Schedule Name" prefWidth="230"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="dayRotationColumn" text="Day Rotation" prefWidth="110"/>
                    <TableColumn fx:id="periodColumn" text="Period" prefWidth="100"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100"/>
                    <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100"/>
                    <TableColumn fx:id="slotsColumn" text="Slots" prefWidth="70"/>
                    <TableColumn fx:id="conflictsColumn" text="Conflicts" prefWidth="85"/>
                    <TableColumn fx:id="qualityColumn" text="Quality" prefWidth="80"/>
                </columns>

                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="ðŸ“­" styleClass="label-title"/>
                        <Label text="No schedules found" styleClass="label-subtitle"/>
                        <Label text="Create your first schedule to get started" styleClass="label-caption"/>
                    </VBox>
                </placeholder>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="ðŸ‘ï¸ View" onAction="#handleView" fx:id="viewButton"
                        disable="true" styleClass="button"/>
                <Button text="âœï¸ Edit" onAction="#handleEdit" fx:id="editButton"
                        disable="true" styleClass="button"/>
                <Button text="ðŸ“‹ Duplicate" onAction="#handleDuplicate" fx:id="duplicateButton"
                        disable="true" styleClass="button"/>
                <Button text="ðŸ“¤ Export" onAction="#handleExport" fx:id="exportButton"
                        disable="true" styleClass="button-warning"/>
                <Button text="ðŸ—‘ï¸ Delete" onAction="#handleDelete" fx:id="deleteButton"
                        disable="true" styleClass="button-danger"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <!-- Status Bar -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="card" style="-fx-padding: 10;">
            <Label text="â—" styleClass="accent-success" style="-fx-font-size: 14;"/>
            <Label fx:id="statusLabel" text="Ready" styleClass="label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="countLabel" text="Total: 0" styleClass="label-caption"/>
        </HBox>
    </bottom>

</BorderPane>

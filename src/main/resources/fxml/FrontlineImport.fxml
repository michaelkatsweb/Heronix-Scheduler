<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eduscheduler.ui.controller.FrontlineImportController"
      spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 20;">

    <!-- Title Section -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="ðŸ“¥" style="-fx-font-size: 24;"/>
        <VBox spacing="2">
            <Label text="Substitute Data Import" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Label text="Import substitute teacher assignments from CSV (Frontline/Kelly Services compatible)" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
        </VBox>
    </HBox>

    <!-- File Selection Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Select CSV File" style="-fx-font-size: 14; -fx-font-weight: 500;"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="filePathField" promptText="No file selected..."
                      editable="false" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: #f9f9f9; -fx-padding: 8;"/>
            <Button text="Browse..." onAction="#handleBrowseFile"
                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 8 16; -fx-cursor: hand;"/>
        </HBox>

        <Label text="ðŸ’¡ Supported formats: CSV files exported from substitute management systems (Frontline, Kelly Services, etc.)"
              style="-fx-font-size: 11; -fx-text-fill: #999; -fx-padding: 5 0 0 0;"/>
    </VBox>

    <!-- Import Options Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Import Options" style="-fx-font-size: 14; -fx-font-weight: 500;"/>

        <CheckBox fx:id="createSubstitutesCheckbox" text="Create new substitutes if not found" selected="true"
                 style="-fx-font-size: 12;"/>
        <CheckBox fx:id="updateExistingCheckbox" text="Update existing substitute information" selected="true"
                 style="-fx-font-size: 12;"/>
        <CheckBox fx:id="skipDuplicatesCheckbox" text="Skip duplicate assignments (by Job ID)" selected="true"
                 style="-fx-font-size: 12;"/>
        <CheckBox fx:id="autoGenerateSchedulesCheckbox" text="Automatically generate schedules after import" selected="false"
                 style="-fx-font-size: 12;"/>
    </VBox>

    <!-- Preview Section (initially hidden) -->
    <VBox fx:id="previewSection" spacing="10" visible="false" managed="false"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Preview" style="-fx-font-size: 14; -fx-font-weight: 500;"/>

        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Total Records:" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                <Label fx:id="totalRecordsLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Valid Records:" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                <Label fx:id="validRecordsLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Invalid Records:" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                <Label fx:id="invalidRecordsLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #F44336;"/>
            </VBox>
        </HBox>

        <TableView fx:id="previewTable" prefHeight="200">
            <columns>
                <TableColumn fx:id="rowColumn" text="Row" prefWidth="50"/>
                <TableColumn fx:id="substituteColumn" text="Substitute" prefWidth="150"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
                <TableColumn fx:id="timeColumn" text="Time" prefWidth="120"/>
                <TableColumn fx:id="replacedStaffColumn" text="Replaced Staff" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Progress Section (initially hidden) -->
    <VBox fx:id="progressSection" spacing="10" visible="false" managed="false"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Import Progress" style="-fx-font-size: 14; -fx-font-weight: 500;"/>

        <ProgressBar fx:id="progressBar" prefWidth="Infinity" prefHeight="25"/>
        <Label fx:id="progressLabel" text="Processing..." style="-fx-font-size: 12; -fx-text-fill: #666;"/>
    </VBox>

    <!-- Results Section (initially hidden) -->
    <VBox fx:id="resultsSection" spacing="10" visible="false" managed="false"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="Import Results" style="-fx-font-size: 14; -fx-font-weight: 500;"/>

        <GridPane hgap="20" vgap="10">
            <Label text="Created:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                  style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="createdLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0"
                  style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>

            <Label text="Updated:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                  style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="updatedLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>

            <Label text="Skipped:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                  style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="skippedLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"
                  style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>

            <Label text="Errors:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                  style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="errorsLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3"
                  style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #F44336;"/>
        </GridPane>

        <!-- Error Details (if any) -->
        <VBox fx:id="errorDetailsSection" spacing="5" visible="false" managed="false">
            <Label text="Error Details:" style="-fx-font-size: 12; -fx-font-weight: 500; -fx-text-fill: #F44336;"/>
            <TextArea fx:id="errorDetailsArea" editable="false" prefHeight="100"
                     style="-fx-background-color: #fff3f3; -fx-border-color: #F44336; -fx-border-radius: 4;"/>
        </VBox>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="previewButton" text="Preview" onAction="#handlePreview" disable="true"
               style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand;"/>
        <Button fx:id="importButton" text="Import" onAction="#handleImport" disable="true"
               style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-weight: bold;"/>
        <Button text="Close" onAction="#handleClose"
               style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 20; -fx-cursor: hand;"/>
    </HBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
Notification Center
Displays system notifications with filtering and management capabilities

Location: src/main/resources/fxml/NotificationCenter.fxml
-->

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eduscheduler.ui.controller.NotificationCenterController"
            styleClass="main-container">

    <!-- HEADER -->
    <top>
        <VBox styleClass="header-section">
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="page-header">
                <Label text="ðŸ”” Notification Center" styleClass="page-title"/>
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Unread Count Badge -->
                <HBox spacing="5" alignment="CENTER">
                    <Label fx:id="unreadCountLabel" text="0 Unread" styleClass="badge-warning"
                           style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 12;"/>
                </HBox>

                <Separator orientation="VERTICAL"/>

                <!-- Actions -->
                <Button text="âœ“ Mark All Read" onAction="#handleMarkAllRead" styleClass="button-secondary"/>
                <Button text="ðŸ—‘ï¸ Dismiss All" onAction="#handleDismissAll" styleClass="button-secondary"/>
                <Button text="ðŸ”„ Refresh" onAction="#handleRefresh" styleClass="button-primary"/>
            </HBox>

            <!-- Filter Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-bar"
                  style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
                <Label text="Filter:" styleClass="filter-label"/>

                <!-- Type Filter -->
                <ComboBox fx:id="typeFilterComboBox" promptText="All Types" onAction="#handleFilterChange"
                          prefWidth="150"/>

                <!-- Priority Filter -->
                <ComboBox fx:id="priorityFilterComboBox" promptText="All Priorities" onAction="#handleFilterChange"
                          prefWidth="130"/>

                <!-- Show Read Toggle -->
                <CheckBox fx:id="showReadCheckbox" text="Show Read" onAction="#handleFilterChange" selected="true"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Time Range -->
                <Label text="Last:" styleClass="filter-label"/>
                <ComboBox fx:id="timeRangeComboBox" onAction="#handleFilterChange" prefWidth="100">
                    <items>
                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                            <String fx:value="24 Hours"/>
                            <String fx:value="7 Days"/>
                            <String fx:value="30 Days"/>
                            <String fx:value="All Time"/>
                        </javafx.collections.FXCollections>
                    </items>
                    <value>
                        <String fx:value="7 Days"/>
                    </value>
                </ComboBox>
            </HBox>
        </VBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <SplitPane dividerPositions="0.7" styleClass="split-pane">

            <!-- LEFT: Notification List -->
            <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                <VBox fx:id="notificationListContainer" spacing="0" styleClass="notification-list-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <!-- Notifications will be dynamically added here -->
                    <VBox fx:id="notificationList" spacing="8">
                        <!-- Dynamic notification items -->
                        <Label fx:id="emptyStateLabel" text="No notifications to display"
                               styleClass="empty-state"
                               style="-fx-text-fill: #999; -fx-font-size: 14; -fx-padding: 40 0;"/>
                    </VBox>
                </VBox>
            </ScrollPane>

            <!-- RIGHT: Details & Summary -->
            <VBox spacing="15" styleClass="details-panel" style="-fx-background-color: #fafafa; -fx-padding: 15;">

                <!-- Summary Stats -->
                <VBox spacing="10" styleClass="card">
                    <Label text="ðŸ“Š Summary" styleClass="section-title"/>

                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="120"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="50" prefWidth="60"/>
                        </columnConstraints>

                        <!-- Row 0: Total -->
                        <Label text="Total:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="totalCountLabel" text="0" styleClass="stat-value" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <!-- Row 1: Unread -->
                        <Label text="Unread:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="unreadStatLabel" text="0" styleClass="stat-value"
                               style="-fx-text-fill: #ff9800;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <!-- Row 2: Critical -->
                        <Label text="Critical:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="criticalCountLabel" text="0" styleClass="stat-value"
                               style="-fx-text-fill: #f44336;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <!-- Row 3: Warnings -->
                        <Label text="Warnings:" styleClass="stat-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="warningCountLabel" text="0" styleClass="stat-value"
                               style="-fx-text-fill: #ff9800;" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- Quick Filters -->
                <VBox spacing="10" styleClass="card">
                    <Label text="ðŸ” Quick Filters" styleClass="section-title"/>

                    <VBox spacing="5">
                        <Button text="âš ï¸ Critical &amp; High Priority" onAction="#handleShowCritical"
                                prefWidth="200" styleClass="button-secondary"/>
                        <Button text="ðŸ“… Schedule Changes" onAction="#handleShowScheduleChanges"
                                prefWidth="200" styleClass="button-secondary"/>
                        <Button text="âŒ Conflicts" onAction="#handleShowConflicts"
                                prefWidth="200" styleClass="button-secondary"/>
                        <Button text="ðŸ‘¥ Enrollment Alerts" onAction="#handleShowEnrollment"
                                prefWidth="200" styleClass="button-secondary"/>
                    </VBox>
                </VBox>

                <!-- Notification Type Legend -->
                <VBox spacing="10" styleClass="card" style="-fx-background-color: #e3f2fd;">
                    <Label text="â„¹ï¸ Notification Types" styleClass="section-title"/>

                    <VBox spacing="5">
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="ðŸ”´" style="-fx-font-size: 16;"/>
                            <Label text="Critical" styleClass="legend-text"/>
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="ðŸŸ " style="-fx-font-size: 16;"/>
                            <Label text="Warning" styleClass="legend-text"/>
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="ðŸ”µ" style="-fx-font-size: 16;"/>
                            <Label text="Info" styleClass="legend-text"/>
                        </HBox>
                        <HBox spacing="8" alignment="CENTER_LEFT">
                            <Label text="ðŸŸ¢" style="-fx-font-size: 16;"/>
                            <Label text="Success" styleClass="legend-text"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Auto-Cleanup Info -->
                <VBox spacing="8" styleClass="card" style="-fx-background-color: #fff3cd;">
                    <Label text="ðŸ—‘ï¸ Auto-Cleanup" styleClass="section-title"/>
                    <Label text="Dismissed notifications older than 30 days are automatically removed."
                           wrapText="true" styleClass="stat-description"
                           style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                    <Button text="Run Cleanup Now" onAction="#handleRunCleanup"
                            prefWidth="180" styleClass="button-secondary"/>
                </VBox>

            </VBox>

        </SplitPane>
    </center>

    <!-- BOTTOM: Pagination (if needed) -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" styleClass="footer-section"
              style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
            <Label fx:id="statusLabel" text="All notifications loaded" styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>

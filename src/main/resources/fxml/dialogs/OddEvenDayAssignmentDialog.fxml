                    </HBox>
                </VBox>

                <!-- Middle Column - Available Courses -->
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5" alignment="CENTER">
                    <Label text="â†•" styleClass="label-subtitle" style="-fx-font-size: 24;"/>
                    <Label text="Available" styleClass="label-caption" style="-fx-font-size: 10; -fx-text-alignment: center;" wrapText="true"/>
                    <ListView fx:id="availableCoursesListView" VBox.vgrow="ALWAYS" styleClass="list-view" prefWidth="150">
                        <tooltip>
                            <Tooltip text="Courses not yet assigned to ODD or EVEN days"/>
                        </tooltip>
                    </ListView>
                    <Label fx:id="availableCountLabel" text="0 available" styleClass="label-caption" style="-fx-font-size: 10;"/>
                </VBox>

                <!-- EVEN Day Courses Column -->
                <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="5">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸŸ  EVEN Day Courses" styleClass="label-subtitle" style="-fx-text-fill: #ff8800;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="evenDayCountLabel" text="0 selected" styleClass="label-caption"/>
                    </HBox>
                    <ListView fx:id="evenDayCoursesListView" VBox.vgrow="ALWAYS" styleClass="list-view">
                        <tooltip>
                            <Tooltip text="Courses assigned to EVEN days (Tue/Thu)&#10;Use Ctrl+Click for multiple selections"/>
                        </tooltip>
                    </ListView>
                    <HBox spacing="5">
                        <Button text="â† Add from Available" onAction="#handleAddToEvenDay" styleClass="button" style="-fx-font-size: 10;"/>
                        <Button text="Remove â†’" onAction="#handleRemoveFromEvenDay" styleClass="button-danger" style="-fx-font-size: 10;"/>
                    </HBox>

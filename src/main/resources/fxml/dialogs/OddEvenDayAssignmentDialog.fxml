                <Label text="â€¢ Longer class periods (90 min) allow for more in-depth learning" styleClass="label-caption" wrapText="true"/>
            </VBox>

            <!-- Status Label -->
            <Label fx:id="statusLabel" styleClass="label-caption" style="-fx-text-fill: #888;" wrapText="true"/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="CANCEL"/>
        <ButtonType fx:id="saveButtonType" text="Save Assignments" buttonData="OK_DONE"/>
    </buttonTypes>
</DialogPane>

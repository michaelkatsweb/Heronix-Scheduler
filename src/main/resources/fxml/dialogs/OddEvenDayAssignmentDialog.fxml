            </GridPane>

            <!-- Info Panel -->
            <VBox spacing="5" styleClass="card" style="-fx-padding: 10; -fx-background-color: #2a2a4a;">
                <Label text="â„¹ï¸ Tips:" styleClass="label-subtitle" style="-fx-text-fill: #00aaff;"/>

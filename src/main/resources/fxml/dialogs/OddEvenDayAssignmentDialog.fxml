                    <Label text="ðŸ“† ODD Days" styleClass="label-subtitle" style="-fx-text-fill: #00aaff;"/>
                    <Label text="Monday, Wednesday, Friday" styleClass="label-caption" wrapText="true"/>
                </VBox>
                <Separator orientation="VERTICAL"/>
                <VBox spacing="3" HBox.hgrow="ALWAYS">
                    <Label text="ðŸ“† EVEN Days" styleClass="label-subtitle" style="-fx-text-fill: #ff8800;"/>
                    <Label text="Tuesday, Thursday" styleClass="label-caption" wrapText="true"/>
                </VBox>
            </HBox>

            <!-- Course Assignment Grid -->
            <GridPane hgap="15" vgap="10" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints percentWidth="45"/>
                    <ColumnConstraints percentWidth="10"/>
                    <ColumnConstraints percentWidth="45"/>
                </columnConstraints>

                <!-- ODD Day Courses Column -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸ”µ ODD Day Courses" styleClass="label-subtitle" style="-fx-text-fill: #00aaff;"/>

                <Label text="ODD/EVEN Day Course Assignment" styleClass="label-title" style="-fx-font-size: 18;"/>
            </HBox>

            <!-- Student Selection -->
            <VBox spacing="5">
                <Label text="Select Student:" styleClass="label-subtitle"/>
                <ComboBox fx:id="studentComboBox" promptText="Choose a student..." styleClass="combo-box" maxWidth="Infinity">
                    <tooltip>
                        <Tooltip text="Select a student to assign their ODD/EVEN day courses"/>
                    </tooltip>
                </ComboBox>
            </VBox>

            <!-- Day Type Info Panel -->
            <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2a2a4a; -fx-background-radius: 5;">

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.eduscheduler.ui.controller.UserManagementController"
            prefWidth="1200" prefHeight="800"
            styleClass="main-view">

    <!-- Top - Header and Toolbar -->
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="ðŸ‘¥ User Management" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="userCountLabel" text="0 users" style="-fx-text-fill: #666; -fx-font-size: 14;"/>
            </HBox>

            <Separator/>

            <!-- Toolbar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <!-- Search -->
                <TextField fx:id="searchField"
                          promptText="ðŸ” Search users by name, username, or email..."
                          prefWidth="350"
                          style="-fx-font-size: 13; -fx-padding: 8;"/>

                <!-- Role Filter -->
                <Label text="Role:"/>
                <ComboBox fx:id="roleFilterCombo" prefWidth="150"/>


                <!-- Status Filter -->
                <Label text="Status:"/>
                <ComboBox fx:id="statusFilterCombo" prefWidth="120"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Action Buttons -->
                <Button fx:id="refreshButton"
                        text="ðŸ”„ Refresh"
                        onAction="#handleRefresh"
                        prefWidth="100"
                        style="-fx-font-size: 13;"/>

                <Button fx:id="addUserButton"
                        text="+ Add User"
                        onAction="#handleAddUser"
                        prefWidth="120"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 13; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center - User Table -->
    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Select Column -->
                    <TableColumn fx:id="selectColumn" text="" prefWidth="40" sortable="false"/>

                    <!-- Username -->
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="120"/>

                    <!-- Full Name -->
                    <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="180"/>

                    <!-- Email -->
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>

                    <!-- Role -->
                    <TableColumn fx:id="roleColumn" text="Role" prefWidth="130"/>

                    <!-- Status -->
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="80"/>

                    <!-- Last Login -->
                    <TableColumn fx:id="lastLoginColumn" text="Last Login" prefWidth="150"/>

                    <!-- Failed Logins -->
                    <TableColumn fx:id="failedLoginsColumn" text="Failed" prefWidth="60"/>

                    <!-- Actions -->
                    <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="220" sortable="false"/>
                </columns>

                <placeholder>
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="No users found" style="-fx-font-size: 16; -fx-text-fill: #999;"/>
                        <Label text="Click 'Add User' to create a new user" style="-fx-font-size: 12; -fx-text-fill: #bbb;"/>
                    </VBox>
                </placeholder>
            </TableView>

            <!-- Table Info Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 5 0 0 0;">
                <Label fx:id="tableInfoLabel" text="Showing 0 users" style="-fx-text-fill: #666; -fx-font-size: 12;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="selectedCountLabel" text="" style="-fx-text-fill: #2196F3; -fx-font-size: 12;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom - Bulk Actions and Pagination -->
    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="15" left="20"/>
            </padding>

            <Separator/>

            <!-- Bulk Actions Bar -->
            <HBox fx:id="bulkActionsBar" spacing="10" alignment="CENTER_LEFT" visible="false" managed="false"
                  style="-fx-background-color: #e3f2fd; -fx-padding: 10; -fx-background-radius: 5;">
                <Label fx:id="bulkSelectionLabel" text="0 selected" style="-fx-font-weight: bold;"/>
                <Separator orientation="VERTICAL" prefHeight="20"/>
                <Button text="Enable Selected" onAction="#handleBulkEnable" prefWidth="120"/>
                <Button text="Disable Selected" onAction="#handleBulkDisable" prefWidth="120"/>
                <Button text="Unlock Selected" onAction="#handleBulkUnlock" prefWidth="120"/>
                <Button text="Delete Selected" onAction="#handleBulkDelete" prefWidth="120"
                        style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Clear Selection" onAction="#handleClearSelection" prefWidth="120"/>
            </HBox>

            <!-- Statistics Bar -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox spacing="2">
                    <Label text="Total Users" style="-fx-font-size: 10; -fx-text-fill: #999;"/>
                    <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2196F3;"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Active" style="-fx-font-size: 10; -fx-text-fill: #999;"/>
                    <Label fx:id="activeUsersLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Administrators" style="-fx-font-size: 10; -fx-text-fill: #999;"/>
                    <Label fx:id="adminsLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #FF9800;"/>
                </VBox>
                <Separator orientation="VERTICAL" prefHeight="30"/>
                <VBox spacing="2">
                    <Label text="Locked" style="-fx-font-size: 10; -fx-text-fill: #999;"/>
                    <Label fx:id="lockedUsersLabel" text="0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #F44336;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <VBox spacing="2" alignment="CENTER_RIGHT">
                    <Label text="Last Refreshed" style="-fx-font-size: 10; -fx-text-fill: #999;"/>
                    <Label fx:id="lastRefreshLabel" text="Never" style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                </VBox>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>

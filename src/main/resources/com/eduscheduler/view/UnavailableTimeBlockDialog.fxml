<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.eduscheduler.controller.UnavailableTimeBlockDialogController"
      spacing="15" prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <Label fx:id="titleLabel" text="Add Unavailable Time Block" styleClass="dialog-title"/>

    <Separator/>

    <!-- Form Fields -->
    <GridPane hgap="10" vgap="15">
        <columnConstraints>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Day of Week -->
        <Label text="Day of Week:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="dayComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"
                  maxWidth="Infinity" promptText="Select day..."/>

        <!-- Start Time -->
        <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   promptText="HH:mm (e.g., 09:00)"/>

        <!-- End Time -->
        <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="endTimeField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="HH:mm (e.g., 10:00)"/>

        <!-- Reason -->
        <Label text="Reason:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="reasonField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   promptText="Optional (e.g., Department Meeting)"/>

        <!-- Recurring -->
        <Label text="Recurring:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4" alignment="CENTER_LEFT">
            <CheckBox fx:id="recurringCheckBox" selected="true"/>
            <Label text="(Weekly recurring block)" styleClass="help-text"/>
        </HBox>
    </GridPane>

    <!-- Validation Message -->
    <Label fx:id="validationLabel" styleClass="error-label" visible="false" managed="false"/>

    <Separator/>

    <!-- Bottom Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave" styleClass="primary-button" defaultButton="true"/>
        <Button text="Cancel" onAction="#handleCancel" cancelButton="true"/>
    </HBox>
</VBox>
